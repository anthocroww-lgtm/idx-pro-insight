# ============================================================
# IDX-Pro Insight - Contoh Konfigurasi Secrets
# ============================================================
# 1. Copy file ini ke: .streamlit/secrets.toml
# 2. Isi nilai asli (JANGAN commit secrets.toml ke Git!)
# ============================================================

# --- Firebase Authentication (Login/Register) ---
# Dari Firebase Console -> Project Settings -> General -> "Web API Key"
[firebase_auth]
api_key = "AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"

# --- Firebase Admin (Firestore Database) ---
# Dari Firebase Console -> Project Settings -> Service Accounts -> Generate new private key
# Download JSON, lalu salin isinya ke sini sebagai TOML (atau bisa baca dari path file JSON).
# Struktur berikut harus sama dengan file JSON service account Anda.
[firebase]
type = "service_account"
project_id = "your-project-id"
private_key_id = "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
private_key = "-----BEGIN PRIVATE KEY-----\nXXXXXX\n-----END PRIVATE KEY-----\n"
client_email = "firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com"
client_id = "123456789"
auth_uri = "https://accounts.google.com/o/oauth2/auth"
token_uri = "https://oauth2.googleapis.com/token"
auth_provider_x509_cert_url = "https://www.googleapis.com/oauth2/v1/certs"
client_x509_cert_url = "https://www.googleapis.com/robot/v1/metadata/x509/..."
universe_domain = "googleapis.com"

# --- Gemini AI (Asisten Tanya Jawab Saham) - Opsional ---
# Dapatkan API key gratis di: https://aistudio.google.com/apikey
# Jika tidak diisi, menu "Tanya Gemini" akan menampilkan pesan untuk menambahkan key.
[gemini]
api_key = ""

# ============================================================
# CATATAN:
# - firebase_auth.api_key = untuk Login/Register (REST API)
# - [firebase] = untuk baca/tulis Firestore (watchlist, trading_journal)
# - [gemini].api_key = untuk Asisten AI tanya jawab saham (opsional)
# - Jika hanya ingin coba tanpa Firebase, biarkan kosong;
#   aplikasi tetap jalan tapi fitur Login & Portofolio Cloud tidak aktif.
# ============================================================
